{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["dom", "es2015", "es2017"], 
      "jsx": "react",
      "sourceMap": false,
      "strict": true /* Enable all strict type-checking options. */,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true
  
    },
    "include": ["./src/**/*"]
  }